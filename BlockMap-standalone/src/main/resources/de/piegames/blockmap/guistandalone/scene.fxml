<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import org.controlsfx.control.CheckListView?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.TreeItem?>
<?import javafx.scene.control.CheckBoxTreeItem?>

<BorderPane
	maxHeight="0"
	maxWidth="0"
	minHeight="0"
	minWidth="0"
	xmlns="http://javafx.com/javafx/8"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="de.piegames.blockmap.guistandalone.GuiController"
	fx:id="root">
	<top>
		<MenuBar>
			<menus>
				<Menu text="_File">
					<items>
						<MenuItem
							text="Load world..."
							onAction="#browseFolder" />
						<MenuItem
							text="Load rendered world..."
							onAction="#browseFile" />
						<MenuItem
							text="Load remote world..."
							onAction="#loadRemote" />
						<MenuItem
							text="Reload"
							onAction="#reloadWorld" />
						<MenuItem
							text="Unload"
							onAction="#unload" />
						<MenuItem
							text="Exit"
							onAction="#exit" />
					</items>
				</Menu>
				<Menu text="_Help">
					<items>
						<MenuItem text="About" 
						onAction="#showAbout"/>
					</items>
				</Menu>
			</menus>
		</MenuBar>
	</top>
	<left>
		<HBox
			spacing="4"
			id="left">
			<children>
				<VBox
					spacing="10"
					id="left-height"
					alignment="CENTER"
					HBox.hgrow="NEVER">
					<children>
						<Label fx:id="maxHeight" />
						<RangeSlider
							fx:id="heightSlider"
							VBox.vgrow="ALWAYS"
							orientation="VERTICAL"
							min="0"
							lowValue="0"
							max="255"
							highValue="255"
							blockIncrement="1"
							majorTickUnit="16"
							minorTickCount="16"
							snapToTicks="true"
							showTickLabels="true"
							showTickMarks="true" />
						<Label fx:id="minHeight" />
					</children>
				</VBox>
				<!-- Split the GridPane into three ones combined by a vbox. This is because the content of the second one will change dynamically and it's difficult to add and remove rows from a grid pane. -->
				<VBox spacing="6">
					<children>
						<GridPane id="left-settings">
							<children>
								<Label
									text="Color pack:"
									GridPane.rowIndex="0"
									GridPane.columnIndex="0" />
								<ChoiceBox
									value="Default"
									fx:id="colorBox"
									maxWidth="Infinity"
									GridPane.rowIndex="0"
									GridPane.columnIndex="1">
									<items>
										<FXCollections fx:factory="observableArrayList">
											<String fx:value="Default" />
											<String fx:value="Caves" />
											<String fx:value="No foliage" />
											<String fx:value="Ocean ground" />
										</FXCollections>
									</items>
								</ChoiceBox>
								<Label
									text="Shading:"
									GridPane.rowIndex="1"
									GridPane.columnIndex="0" />
								<ChoiceBox
									value="Relief"
									fx:id="shadingBox"
									maxWidth="Infinity"
									GridPane.rowIndex="1"
									GridPane.columnIndex="1">
									<items>
										<FXCollections fx:factory="observableArrayList">
											<String fx:value="Flat" />
											<String fx:value="Relief" />
											<String fx:value="Biome color" />
											<String fx:value="Height map" />
										</FXCollections>
									</items>
								</ChoiceBox>
								<CheckBox
									text="Show grid"
									fx:id="gridBox"
									GridPane.rowIndex="2"
									GridPane.columnIndex="0"
									GridPane.columnSpan="2">
								</CheckBox>
								<CheckBox
									text="Show pins"
									fx:id="pinBox"
									selected="true"
									GridPane.rowIndex="3"
									GridPane.columnIndex="0"
									GridPane.columnSpan="2">
								</CheckBox>
							</children>
							<columnConstraints>
								<ColumnConstraints hgrow="ALWAYS" />
								<ColumnConstraints hgrow="ALWAYS" />
							</columnConstraints>
							<rowConstraints>
								<RowConstraints />
								<RowConstraints />
								<RowConstraints />
							</rowConstraints>
						</GridPane>
						<GridPane fx:id="regionSettings">
							<columnConstraints>
								<ColumnConstraints hgrow="ALWAYS" />
								<ColumnConstraints hgrow="ALWAYS" />
							</columnConstraints>
						</GridPane>
						<GridPane
							hgap="6"
							vgap="3"
							VBox.vgrow="ALWAYS">
							<children>
								<CheckTreeView
									showRoot="false"
									id="pin-tree"
									fx:id="pinView"
									GridPane.rowIndex="0"
									GridPane.columnIndex="0"
									GridPane.columnSpan="2">
								</CheckTreeView>
							</children>
							<columnConstraints>
								<ColumnConstraints hgrow="ALWAYS" />
								<ColumnConstraints hgrow="ALWAYS" />
							</columnConstraints>
							<rowConstraints>
								<RowConstraints vgrow="ALWAYS" />
							</rowConstraints>
						</GridPane>
					</children>
				</VBox>
			</children>
		</HBox>
	</left>
	<center>
	</center>
	<bottom>
		<StatusBar fx:id="statusBar" />
	</bottom>
</BorderPane>