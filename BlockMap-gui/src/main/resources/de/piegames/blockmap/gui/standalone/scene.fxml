<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import org.controlsfx.control.CheckListView?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.TreeItem?>
<?import javafx.scene.control.CheckBoxTreeItem?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import de.piegames.blockmap.MinecraftDimension?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.Tab?>

<VBox
	maxHeight="0"
	maxWidth="0"
	minHeight="0"
	minWidth="0"
	xmlns="http://javafx.com/javafx/8"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="de.piegames.blockmap.gui.standalone.GuiController">
	<MenuBar>
		<menus>
			<Menu text="_File">
				<items>
					<MenuItem
						text="Load world..."
						onAction="#browseFolder">
						<accelerator>
							<KeyCodeCombination
								code="O"
								alt="UP"
								control="DOWN"
								meta="UP"
								shift="UP"
								shortcut="UP" />
						</accelerator>
					</MenuItem>
					<MenuItem
						text="Load from server..."
						onAction="#loadRemote">
						<accelerator>
							<KeyCodeCombination
								code="O"
								alt="UP"
								control="DOWN"
								meta="UP"
								shift="DOWN"
								shortcut="UP" />
						</accelerator>
					</MenuItem>
					<MenuItem
						text="Reload"
						onAction="#reloadWorld">
						<accelerator>
							<KeyCodeCombination
								code="R"
								alt="UP"
								control="DOWN"
								meta="UP"
								shift="UP"
								shortcut="UP" />
						</accelerator>
					</MenuItem>
					<MenuItem
						text="Unload"
						onAction="#unload">
						<accelerator>
							<KeyCodeCombination
								code="W"
								alt="UP"
								control="DOWN"
								meta="UP"
								shift="UP"
								shortcut="UP" />
						</accelerator>
					</MenuItem>
					<MenuItem
						text="Quit"
						onAction="#exit">
						<accelerator>
							<KeyCodeCombination
								code="Q"
								alt="UP"
								control="DOWN"
								meta="UP"
								shift="UP"
								shortcut="UP" />
						</accelerator>
					</MenuItem>
				</items>
			</Menu>
			<Menu text="_Help">
				<items>
					<MenuItem
						text="About"
						onAction="#showAbout" />
				</items>
			</Menu>
		</menus>
	</MenuBar>
	<BorderPane
		fx:id="root"
		VBox.vgrow="ALWAYS">
		<top>
			<HBox id="top">
				<children>
					<TextField
						onAction="#load"
						promptText="Enter path to world or server URI"
						fx:id="worldInput"
						maxWidth="Infinity"
						HBox.hgrow="ALWAYS" />
					<Button
						text="Load"
						onAction="#load" />
				</children>
			</HBox>
		</top>
		<left>
			<Accordion>
				<panes>
					<TitledPane
						text="Server"
						expanded="true">
						<content>
							<VBox id="server-settings">
								<children>
									<HBox>
										<children>
											<Label text="World" />
											<ChoiceBox
												fx:id="worldBox"
												maxWidth="Infinity" />
										</children>
									</HBox>
									<Label text="Server name" />
									<ImageView />
									<Label text="Server description" />
									<Label text="Players online: 0/30" />
								</children>
							</VBox>
						</content>
					</TitledPane>
					<TitledPane
						text="World"
						expanded="true">
						<content>
							<GridPane id="world-settings">
								<children>
									<Label
										text="Dimension:"
										GridPane.rowIndex="1"
										GridPane.columnIndex="0" />
									<ChoiceBox
										fx:id="dimensionBox"
										maxWidth="Infinity"
										GridPane.rowIndex="1"
										GridPane.columnIndex="1">
										<items>
											<FXCollections fx:factory="observableArrayList">
												<MinecraftDimension fx:value="OVERWORLD" />
												<MinecraftDimension fx:value="NETHER" />
												<MinecraftDimension fx:value="END" />
											</FXCollections>
										</items>
									</ChoiceBox>

									<Label
										text="Color pack:"
										GridPane.rowIndex="2"
										GridPane.columnIndex="0" />
									<ChoiceBox
										value="Default"
										fx:id="colorBox"
										maxWidth="Infinity"
										GridPane.rowIndex="2"
										GridPane.columnIndex="1">
										<items>
											<FXCollections fx:factory="observableArrayList">
												<String fx:value="Default" />
												<String fx:value="Caves" />
												<String fx:value="No foliage" />
												<String fx:value="Ocean ground" />
											</FXCollections>
										</items>
									</ChoiceBox>

									<Label
										text="Shading:"
										GridPane.rowIndex="3"
										GridPane.columnIndex="0" />
									<ChoiceBox
										value="Relief"
										fx:id="shadingBox"
										maxWidth="Infinity"
										GridPane.rowIndex="3"
										GridPane.columnIndex="1">
										<items>
											<FXCollections fx:factory="observableArrayList">
												<String fx:value="Flat" />
												<String fx:value="Relief" />
												<String fx:value="Biome color" />
												<String fx:value="Height map" />
											</FXCollections>
										</items>
									</ChoiceBox>

									<Label
										text="Min. height:"
										GridPane.rowIndex="4"
										GridPane.columnIndex="0" />
									<TextField
										text="0"
										fx:id="minHeight"
										GridPane.rowIndex="4"
										GridPane.columnIndex="1" />

									<Label
										text="Max. height:"
										GridPane.rowIndex="5"
										GridPane.columnIndex="0" />
									<TextField
										text="255"
										fx:id="maxHeight"
										GridPane.rowIndex="5"
										GridPane.columnIndex="1" />
								</children>
								<columnConstraints>
									<ColumnConstraints hgrow="ALWAYS" />
									<ColumnConstraints hgrow="ALWAYS" />
								</columnConstraints>
							</GridPane>
						</content>
					</TitledPane>
					<TitledPane
						text="View"
						expanded="true">
						<content>
							<GridPane>
								<children>
									<CheckBox
										text="Show grid"
										fx:id="gridBox"
										GridPane.rowIndex="2"
										GridPane.columnIndex="0"
										GridPane.columnSpan="2">
									</CheckBox>

									<CheckBox
										text="Show scale bar"
										fx:id="scaleBox"
										GridPane.rowIndex="3"
										GridPane.columnIndex="0"
										GridPane.columnSpan="2">
									</CheckBox>

									<CheckBox
										text="Show pins"
										fx:id="pinBox"
										selected="true"
										GridPane.rowIndex="4"
										GridPane.columnIndex="0"
										GridPane.columnSpan="2">
									</CheckBox>

									<CheckTreeView
										showRoot="false"
										id="pin-tree"
										fx:id="pinView"
										GridPane.rowIndex="5"
										GridPane.columnIndex="0"
										GridPane.columnSpan="2"
										GridPane.vgrow="ALWAYS">
									</CheckTreeView>
								</children>
							</GridPane>
						</content>
					</TitledPane>
				</panes>
			</Accordion>
		</left>
		<center>
		</center>
		<bottom>
			<StatusBar fx:id="statusBar" />
		</bottom>
	</BorderPane>
</VBox>